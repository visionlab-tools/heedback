{
  "name": "heedback",
  "version": "0.1.0",
  "private": true,
  "description": "The open source customer support & product feedback suite",
  "license": "MIT",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:api": "cd packages/api && bun run dev",
    "dev:web": "cd packages/web && bun run dev",
    "dev:portal": "cd packages/portal && bun run dev",
    "build": "bun run build:api && bun run build:web && bun run build:portal",
    "build:api": "cd packages/api && bun run build",
    "build:web": "cd packages/web && bun run build",
    "build:portal": "cd packages/portal && bun run build",
    "build:widget": "cd packages/widget && bun run build",
    "lint": "bun run lint:api && bun run lint:web && bun run lint:portal",
    "lint:api": "cd packages/api && bun run lint",
    "lint:web": "cd packages/web && bun run lint",
    "lint:portal": "cd packages/portal && bun run lint",
    "test": "cd packages/api && bun run test",
    "typecheck": "cd packages/api && bun run typecheck",
    "prepare": "git config core.hooksPath .githooks || true"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
