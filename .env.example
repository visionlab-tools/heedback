# =============================================================================
# Heedback — Environment Configuration
# =============================================================================
# Copy this file to .env and update the values.
# All variables are required unless marked as optional.

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=heedback
POSTGRES_PASSWORD=heedback_secret
POSTGRES_DB=heedback
DATABASE_URL=postgresql://heedback:heedback_secret@postgres:5432/heedback

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NODE_ENV=production
APP_KEY=your-random-32-character-secret-key
APP_URL=http://localhost:3333
WEB_URL=http://localhost:3000
PORTAL_URL=http://localhost:3001

# Port configuration
API_PORT=3333
WEB_PORT=3000
PORTAL_PORT=3001

# -----------------------------------------------------------------------------
# Mail (via Kuriyr)
# -----------------------------------------------------------------------------
KURIYR_URL=http://kuriyr:4400
KURIYR_API_TOKEN=your-kuriyr-api-token
MAIL_FROM_NAME=Heedback
MAIL_FROM_EMAIL=noreply@heedback.example.com

# -----------------------------------------------------------------------------
# Storage (S3-compatible — MinIO)
# -----------------------------------------------------------------------------
S3_ENDPOINT=http://minio:9000
S3_BUCKET=heedback
S3_ACCESS_KEY=heedback_minio
S3_SECRET_KEY=heedback_minio_secret
S3_REGION=us-east-1

# MinIO console
MINIO_ROOT_USER=heedback_minio
MINIO_ROOT_PASSWORD=heedback_minio_secret

# -----------------------------------------------------------------------------
# Super Admin (created on first launch)
# -----------------------------------------------------------------------------
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Optional
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# RATE_LIMIT_MAX=100
# SESSION_DRIVER=redis
